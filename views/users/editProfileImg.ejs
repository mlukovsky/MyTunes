<% layout('layouts/boilerplate') %>
    <title>Edit Profile Picture - MyTunes</title>
    <div class="text-center">
        <div>
            <img src="<%= user.profileImage.url %>" id="profile-pic" alt="Profile Picture">
        </div>


        <div class="my-5 w-50 mx-auto">
            <h3>Edit Profile Picture</h3>
            <small>(.jpeg, .jpg, or .png only)</small>
            <form action="/profileImg?_method=PUT" method="post" enctype="multipart/form-data">
                <input class="form-control" type="file" name="newImage">
                <input type="hidden" name="oldImgFilename" value="<%= user.profileImage.filename %>">
                <button class="btn btn-primary mt-2">Upload</button>
            </form>
            <small>This will delete your current profile picture and change it to the new one</small>

        </div>

        <div class="mt-3">
            <form action="/profileImg?_method=DELETE" method="post">
                <input type="hidden" name="filename" value="<%= user.profileImage.filename %>">
                <button class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path
                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd"
                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg> Delete Profile Picture</button>
            </form>
        </div>
    </div>